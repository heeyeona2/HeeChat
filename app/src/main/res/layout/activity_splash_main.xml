<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashMainActivity"
    android:background="@drawable/custom_box1">

        <ImageView
            android:id="@+id/splash_image"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:src="@mipmap/splash_image"
            android:layout_centerInParent="true"
            android:paddingBottom="120dp"/>
        <TextView
            android:id="@+id/splash_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumsquareeb"
            android:textColor="@color/white"
            android:paddingTop="90dp"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/splash_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samsung Intern Project"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/nanumsquareeb"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"/>


</RelativeLayout>