<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/total"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_picture"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_right"
            android:backgroundTint="#C54646"
            android:text="..."
            android:clickable="true"
            android:id="@+id/show_msg"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/playstatus"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_below="@id/show_msg"
            android:layout_alignEnd="@id/show_msg"
            android:layout_alignRight="@id/show_msg"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="1dp"
            android:src="@mipmap/playstatus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_seen"
            android:layout_toLeftOf="@id/show_msg"
            android:layout_alignBottom="@id/show_msg"
            android:textSize="8sp"
            android:layout_marginRight="4dp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/emoticon"
            android:layout_alignEnd="@id/show_msg"
            android:layout_below="@id/show_msg"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>